<ul class="social-icons social-mini">
    <li>
        <a data-toggle="tooltip" title="Share on Twitter" href="https://twitter.com/share?text={{encode title}}&amp;url={{url absolute="true"}}" onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
            <i class="fa fa-twitter"></i>
        </a>
    </li>
    <li>
        <a data-toggle="tooltip" title="Share on Facebook" href="https://www.facebook.com/sharer/sharer.php?u={{url absolute="true"}}" onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
            <i class="fa fa-facebook"></i>
        </a>
    </li>
    <li>
        <a data-toggle="tooltip" title="Share on Google plus" href="https://plus.google.com/share?url={{url absolute="true"}}"             onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
            <i class="fa fa-google-plus"></i>
        </a>
    </li>
    <li>
        <a data-toggle="tooltip" title="Share on Reddit" href="https://reddit.com/submit?url={{url absolute="true"}}"   onclick="window.open(this.href, 'reddit-share', 'width=490,height=530');return false;">
            {{!--<i class="icon-google-plus"></i>--}}
            <i class="fa fa-reddit-alien" aria-hidden="true"></i>
        </a>
    </li>
    <li>
        <a data-toggle="tooltip" title="Share on LinkedIn"  href="https://www.linkedin.com/shareArticle?mini=true&amp;url={{url absolute="true"}}" onclick="window.open(this.href, 'linkedin-share','width=580,height=296');return false;">
            <i class="fa fa-linkedin" aria-hidden="true"></i>
        </a>
    </li>
    <li>
        <a data-toggle="tooltip" title="Share in Email"  class="fa fa-envelope" href="mailto:?subject=Hanson.Io%3A%20{{encode title}}&amp;body={{url absolute="true"}}"></a>
    </li>
</ul>
